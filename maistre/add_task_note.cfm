<cfsetting showdebugoutput="false" ><cfparam name="form" type="struct" default="#{}#"><cfparam name="form.project_id" type="any" default="-1"><cfparam name="form.commit_id" type="any" default=""><cfset application._model_user.advanced_protect(form.project_id,session.user_id)><cfif form.task_id neq "" and form.user_id neq "" and form.content neq "">	<cfset args={}>	<cfset args.task_id = form.task_id>	<cfset args.user_id = form.user_id>	<cfset args.content = form.content>		<cfif form.commit_id neq "">		<cfset args.commit_id = form.commit_id>	</cfif>		<cfset application._model_task.add_task_note(argumentCollection=args)>	<cflocation url="task.cfm?project_id=#form.project_id#&task_id=#form.task_id###commits" addtoken="false"></cfif>